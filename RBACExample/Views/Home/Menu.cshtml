@{
    Layout = null;

    var userData = (User as RBACExample.RBAC.RBACPrincipal);
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Menu</title>
</head>
<body>

    <style>
        div#divmenu a {
            display: block;
        }
    </style>

    <h3>認證: @User.Identity.IsAuthenticated</h3>

    @if (User.Identity.IsAuthenticated)
    {
        <h3>Name: @User.Identity.Name</h3>

        <h3>Role: @userData.Role</h3>

        <div id="divmenu">
            @Html.DynamicMenu(userData.Role)
        </div>
    }
    else {     
        <div id="divmenu">
            @Html.DynamicMenu()
        </div>
    }



</body>
</html>
